# Environment
ENV=production  # development, production, testing

# Security Tokens
ADMIN_TOKEN=admin_ug_board_secure_token_2025_replace_this
INGEST_TOKEN=ug_board_ingest_secure_token_2025_replace_this
INTERNAL_TOKEN=ug_board_internal_secure_token_2025_replace_this
YOUTUBE_TOKEN=ug_board_youtube_secure_token_2025_replace_this

# YouTube Worker Integration
YOUTUBE_WORKER_URL=https://ugboard-youtube-puller.kimkp015.workers.dev
YOUTUBE_WORKER_TOKEN=${YOUTUBE_TOKEN}

# Database
DATABASE_URL=sqlite:///./ugboard.db
